{
  "experiment_name": "enhanced_binary_civility_detection",
  "description": "Enhanced pseudo-civility detection with advanced training methods from Qwen-4B documentation",
  "data": {
    "datasets": [
      "chnsenticorp",
      "wikipedia_politeness", 
      "go_emotions",
      "civil_comments",
      "toxigen"
    ],
    "max_samples": 400,
    "test_size": 0.2,
    "val_size": 0.1,
    "random_state": 42,
    "archive_root": "Archive",
    "output_dir": "outputs",
    "min_text_length": 10,
    "max_text_length": 512,
    "remove_duplicates": true,
    "balance_classes": true
  },
  "model": {
    "model_name": "Qwen/Qwen3-Embedding-4B",
    "model_cache_root": "model_cache",
    "device": null,
    "quantize": true,
    "batch_size": 4,
    "max_seq_length": 256,
    "use_lora": false,
    "lora_r": 8,
    "lora_alpha": 32,
    "lora_dropout": 0.1,
    "use_instruction_prompt": false,
    "instruction": "Represent the sentiment and civility of this text for classification. Analyze politeness, toxicity, and emotional tone.",
    "use_contrastive": false,
    "contrastive_temperature": 0.07,
    "contrastive_margin": 0.5,
    "use_setfit": false,
    "setfit_epochs": 1,
    "setfit_batch_size": 8
  },
  "training": {
    "classifier_type": "xgboost",
    "max_iter": 1000,
    "class_weight": "balanced",
    "logistic_regression": {
      "C": 10.0,
      "penalty": "l2",
      "solver": "lbfgs",
      "max_iter": 1000
    },
    "svm": {
      "C": 10.0,
      "kernel": "rbf",
      "gamma": "scale"
    },
    "random_forest": {
      "n_estimators": 100,
      "max_depth": 8,
      "min_samples_split": 5,
      "min_samples_leaf": 2
    },
    "xgboost": {
      "n_estimators": 100,
      "max_depth": 6,
      "learning_rate": 0.1,
      "subsample": 0.8,
      "colsample_bytree": 0.8,
      "reg_alpha": 0.1,
      "reg_lambda": 1.0
    },
    "neural_network": {
      "hidden_layer_sizes": [256, 128],
      "activation": "relu",
      "alpha": 0.001,
      "learning_rate": "adaptive",
      "max_iter": 1000
    },
    "use_ensemble": true,
    "ensemble_methods": ["logistic_regression", "xgboost", "random_forest"],
    "cross_validation": false,
    "cv_folds": 3,
    "threshold_optimization": true,
    "early_stopping": true,
    "learning_rate_schedule": true
  },
  "evaluation": {
    "metrics": [
      "accuracy",
      "f1",
      "precision", 
      "recall",
      "roc_auc",
      "confusion_matrix",
      "pr_auc"
    ],
    "average": "binary",
    "save_predictions": true,
    "save_probabilities": true,
    "threshold_optimization": true,
    "calibration": true,
    "feature_importance": true,
    "error_analysis": true,
    "macro_averaging": true
  },
  "log_level": "INFO",
  "save_embeddings": true,
  "save_models": true,
  "save_results": true
}
